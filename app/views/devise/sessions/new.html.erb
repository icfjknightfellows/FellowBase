<div class="container signin-page">
  <div class='col-sm-4 col-sm-offset-4 logo'></div>
  <div class="clearfix"></div>
  <div class='col-sm-4 col-sm-offset-4 card'>
    <h2>Sign in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
      </div>

      <div class="form-actions">
        <%= f.button :submit,"Sign in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<script type="text/javascript">
  var errors = <%= resource.errors.full_messages.to_json.html_safe %>;
  errors.forEach(function(d) {
    generate_notify({text: d, notify: "error"})
  });
</script>