<div class="container">
  <ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#with_data">Digital Assets with data</a></li>
    <li><a data-toggle="pill" href="#with_no_data">Digital Assets with no data</a></li>
  </ul>

  <div class="tab-content">
    <div id="with_data" class="tab-pane fade in active">
      <table class="table">
        <thead>
          <th>Asset</th>
          <th>Last update requested by pykih</th>
          <th>Last data updated by impact monitor</th>
        </thead>
        <tbody>
          <% @links_with_data.each do |da| %>
            <tr>
              <td><%= da.asset %></td>
              <td><%= da.last_requested_unixtime.present? ? time_ago_in_words(Time.at(da.last_requested_unixtime).to_datetime) + " ago" : "Not requested" %></td>
              <td><%= da.last_update_unixtime.present? ? time_ago_in_words(Time.at(da.last_update_unixtime).to_datetime) + " ago" : "Not updated" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div id="with_no_data" class="tab-pane fade">
      <table class="table">
        <thead>
          <th>Asset</th>
          <th>Last update requested by pykih</th>
          <th>Last data updated by impact monitor</th>
          <th>Errors</th>
        </thead>
        <tbody>
          <% @links_with_no_data.each do |da| %>
            <tr>
              <td><%= da.asset %></td>
              <td><%= da.last_requested_unixtime.present? ? time_ago_in_words(Time.at(da.last_requested_unixtime).to_datetime) + " ago" : "Not requested" %></td>
              <td><%= da.last_update_unixtime.present? ? time_ago_in_words(Time.at(da.last_update_unixtime).to_datetime) + " ago" : "Not updated" %></td>
              <td><%= da.custom_errors %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>